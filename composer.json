{
    "name": "dbp/relay-dispatch-bundle",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.3",
        "ext-dom": "*",
        "ext-simplexml": "*",
        "api-platform/core": "^2.6",
        "dbp/relay-base-person-bundle": "^0.2.1",
        "dbp/relay-core-bundle": "^0.1.37",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/framework-bundle": "^5.2",
        "symfony/orm-pack": "^2.2",
        "symfony/uid": "^5.4",
        "symfony/validator": "^5.4",
        "ext-soap": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0.0",
        "phpstan/phpstan-phpunit": "^1.0.0",
        "phpunit/phpunit": "^9",
        "symfony/phpunit-bridge": "^5.2",
        "vimeo/psalm": "^4.2.1"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\DispatchBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\DispatchBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.3"
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php vendor/bin/simple-phpunit --coverage-html _coverage"
        ]
    }
}
